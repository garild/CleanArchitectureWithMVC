@model int
<h1>Update</h1>


<form asp-controller="Company" asp-action="UpdatePost" asp-route-Id="@Model" method="post">

    <div class="form-row">

        <div class="col-md-6">
            <input class="form-control" type="text" name="Name" id="Name" />
            <p></p>
            <input class="form-control" value="@Model" type="hidden" name="Id" />
        </div>

        <div class="col-md-9">
            <button class="btn-lg btn-primary" type="submit">Update</button>
        </div>
    </div>
</form>
